page{
  height: 100%;
  width: 100%;
}

.bkImg{
  z-index: 2;
  height: 100%;
  width: 100%;
}
.title{
  height: 80%;
  width: 100%;
  position: fixed;
  text-align:center;
  display: flex;
  justify-content:center;
  align-items: center;
  top: 0;
  font-size: 80rpx;
  font-weight: 1000;
  line-height:100rpx;
  color:#3CFF8A;
  text-shadow: 0rpx 2rpx 4rpx #ffffff;
}
button{
  /* 位置 */
  position: absolute;
  bottom: 45rpx;
  left:0;right:0;
  /* 大小 */
  width:700rpx;
  height: 160rpx;
  border-radius: 40rpx;
  /* 颜色 */
  background-color: #C9F994;
  box-shadow: 23rpx 29rpx 38rpx 0px #ffffff9c inset,-13rpx -5rpx 30rpx 0px #d3ee667c;
  /* 内容 */
  display: flex;
  justify-content:center;
  align-items: center;
  font-size: 60rpx;
  font-weight: 800;
  color: black;
  text-shadow: 0rpx 2rpx 10rpx #ffffff;
}
.button-hover{
  background-color: #a8fa51;
  color: black;
}
