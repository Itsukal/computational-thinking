{
  
}

/* 单选标签 */
.tag{
  float: left;
  float:left;
  font-weight:bolder;
  padding-left:5rpx;
  margin-top:0rpx;
}

/* 问题文本 */
.questionText{
  font-size: 43;
  color:rgba(255,255,255,0.2);
  font-weight: bolder;
  text-shadow: 0 0 0.2px white;
  position:relative;
  z-index: 30;
  /* line-height: 50rpx; */
}

.questionIndex{
  padding-left:15rpx;
  padding-top:25rpx;
  font-size:32;
  font-weight: bolder;
  text-shadow: 0,0,5px,white;
  color:rgba(255,255,255,1);

}

.imageBackground
{
  top:60rpx;
  margin-top:63rpx;
  height:700rpx;
  width:1200rpx;
  margin-left:-150rpx;
  background-image: linear-gradient(to bottom right,#FB8E76 , #FE6845);
  position: absolute;
  z-index: 0;
  border-radius: 400rpx;
  transform-origin:50% 50%;
  transform: rotate(2deg);
  /* box-shadow: 3rpx 3rpx 3rpx 3rpx white inset; */
  border-top: 10rpx dashed white;
}

.outBoarder
{
  background-color: pink;
  z-index:30;
