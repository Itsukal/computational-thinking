/* pages/select/index.wxss */

.container{
  position: relative;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 文本框组件 */
.textBox{
  margin-top:80rpx;
  margin-left:20rpx;
  margin-right:20rpx;
 
  
}

/* 单选标签 */
.tag{
  /* float: left; */
  float:left;
}

/* 问题文本 */
.questionText{
  font-size: 40rpx;
  line-height: 50rpx;
}

/* 图片 */
.image{
  margin-top:40rpx;
  padding-left:20rpx;
  padding-right:20rpx;
  display: inline-block;
  box-sizing: border-box;
  width:100%;
}

/* 选择初始状态，即还未选择状态 */
.selection1{
  width: 100%;
  height: 150rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* margin:0rpx;
  padding-top:0rpx; */
  border:4rpx solid rgb(246,246,246);
  }
  .selection2{
  width: 100%;
  height: 150rpx;
  background-color: rgb(234,234,234);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border:4rpx solid rgb(246,246,246);
  }
  .selection3{
  width: 100%;
  height: 150rpx;
  background-color: red;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  }
  .selection{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:40rpx;
  }

  /* 底部组件 */
.ground{
  position: fixed;
  bottom: 0;
  padding-top:10rpx;
  height:116rpx;
  width:100%;
  background-color:rgb(22,139,155);
  display:flex;
  flex-direction: row;
}

.groundViewButton{
  margin-top:10rpx;
  height:96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left:3rpx;
}

.groundButton{
  height:96rpx;
  justify-content: center;
  align-items: center;
}

.time{
  width:500rpx;
  height:30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:40rpx;
}

.container{
  width:100%;
}

.empty{
  height:350rpx;
}