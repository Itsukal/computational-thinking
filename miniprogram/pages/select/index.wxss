  margin-left:10px;
  margin-right:10px;
  height:350rpx;
  border-radius: 30rpx;
  border-style: solid;
  border-width: 8rpx;
  box-shadow:0px -1px 4px 1px white;
  border-color:rgba(255,255,255,2);
}

